{
  "name": "backend",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "cross-env NODE_ENV=production node index.js",
    "dev": "cross-env NODE_ENV=development nodemon index.js",
    "docker": "cross-env NODE_ENV=docker nodemon index.js",
    "cypress": "cross-env NODE_ENV=test node index.js",
    "build:ui": "rm -rf build && cd ../frontend && npm run build --prod && cp -r build ../backend",
    "lint": "eslint .",
    "test": "cross-env NODE_ENV=test mocha 'tests/index.js' --timeout 60000",
    "coverage": "nyc npm run test",
    "report": "nyc --reporter=html npm run test"
  },
  "dependencies": {
    "@graphql-tools/schema": "^7.1.5",
    "apollo-server-express": "^3.10.0",
    "bcrypt": "^5.0.1",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "date-fns": "^2.22.1",
    "date-fns-tz": "^1.1.6",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "graphql": "^15.5.0",
    "graphql-subscriptions": "^1.2.1",
    "graphql-ws": "^5.9.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.5.1",
    "mongoose-unique-validator": "^3.1.0",
    "node-cron": "^3.0.0",
    "nodemailer": "^6.6.1",
    "uuid": "^8.3.2",
    "ws": "^8.8.1"
  },
  "nyc": {
    "exclude": [
      "models",
      "tests",
      "services/mailer.js",
      "services/dbsetup.js",
      "db/encoders.js",
      "node_modules",
      "utils/mailer",
      "config.js"
    ]
  },
  "devDependencies": {
    "chai": "^4.3.6",
    "eslint": "^7.27.0",
    "mocha": "^10.0.0",
    "mongodb-memory-server": "^6.9.6",
    "nodemon": "^2.0.19",
    "nyc": "^15.1.0",
    "sinon": "^14.0.0"
  }
}
